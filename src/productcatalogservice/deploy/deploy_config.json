{
    "release": {
        "name": "product-catalog",
        "namespace": "demo",
        "strategy": {
            "type": "canary",
            "config": {
                "interval": "30s",
                "initial_traffic": 10,
                "traffic_step": 20,
                "max_traffic": 100
            }
        },
        "monitor": {
            "checks": [
                {
                    "name": "request-success",
                    "min": 70
                },
                {
                    "name": "request-duration",
                    "min": 0,
                    "max": 3500
                }
            ]
        }
    }
}